                            android:gravity="center"
                            android:layout_margin="@dimen/_10_dp"
                            />

                        <ImageView
                            android:id="@+id/xlIncreaserImageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/colorPrimary"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_16_dp"
            android:paddingBottom="@dimen/_16_dp">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="400dp"
                app:cardElevation="@dimen/_8_dp"
                android:layout_margin="@dimen/_10_dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8_dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXL"
                        android:textSize="@dimen/_24_sp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:layout_gravity="center" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/xxlDecreaserImageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
