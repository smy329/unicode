<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DressSegmentActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_margin_size">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginBottom="@dimen/_16_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Unicode"
                android:textAllCaps="true"
                android:textSize="@dimen/_26_sp"
                android:fontFamily="@font/roboto_slab_bold"/>

            <ImageView
                android:id="@+id/profileIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                app:tint="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5_dp"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/uniformCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16_dp"
            app:cardBackgroundColor="@color/dodger_blue"
            app:cardCornerRadius="@dimen/_15_dp"
            app:cardElevation="@dimen/_10_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_24_dp"
                android:layout_marginBottom="@dimen/_24_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_8_dp"
                    android:src="@drawable/ic_uniform_card" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18_dp"
                    android:layout_marginBottom="@dimen/_18_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Uniform"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_22_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:text="Love what you wear"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16_sp" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/eventsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16_dp"
            app:cardBackgroundColor="@color/pumpkin"
            app:cardCornerRadius="@dimen/_15_dp"
            app:cardElevation="@dimen/_10_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_24_dp"
                android:layout_marginBottom="@dimen/_24_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18_dp"
                    android:layout_marginBottom="@dimen/_18_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Events"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_22_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:text="Inspired Comfortnn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16_sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8_dp"
                    android:src="@drawable/ic_events" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tailoringCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16_dp"
            app:cardBackgroundColor="@color/sizzling_red"
            app:cardCornerRadius="@dimen/_15_dp"
            app:cardElevation="@dimen/_10_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_24_dp"
                android:layout_marginBottom="@dimen/_24_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_8_dp"
                    android:src="@drawable/ic_tailoring" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18_dp"
                    android:layout_marginBottom="@dimen/_18_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Tailoring"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_22_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:text="Stitch as per your Wish"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16_sp" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/designingCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16_dp"
            app:cardBackgroundColor="@color/purple_munsell"
            app:cardCornerRadius="@dimen/_15_dp"
            app:cardElevation="@dimen/_10_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_24_dp"
                android:layout_marginBottom="@dimen/_24_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18_dp"
                    android:layout_marginBottom="@dimen/_18_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Designing"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_22_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_2_dp"
                        android:layout_marginBottom="@dimen/_2_dp"
                        android:text="Feel the Satisfaction"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16_sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8_dp"
                    android:src="@drawable/ic_designing" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>