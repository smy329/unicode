<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.PrecisionsFragment"
    android:layout_margin="@dimen/activity_margin_size"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/warningTextViewPrecision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please be sure your given measurements are in Inches"
            android:gravity="center"
            android:layout_marginTop="@dimen/_4_dp"
            android:layout_marginBottom="@dimen/_4_dp"
            android:textColor="@color/gray"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/precisionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8_dp"
            android:layout_marginBottom="@dimen/_8_dp">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/placeOrderPrecisionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4_dp"
            android:layout_marginBottom="@dimen/_4_dp"
            android:text="Place Your Order"
            style="@style/Button"/>
    </LinearLayout>



</ScrollView>