<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unicode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- In case light statusbar color, for showing notification icons-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->



        <!-- Declaring default font, font color -->
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_body_text_size</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Button" >
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:padding">@dimen/_12_dp</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Card" >
        <item name="android:padding">@dimen/_12_dp</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">@dimen/_16_sp</item>
        <item name="textAllCaps">false</item>
    </style>



    <style name="NoActionBar">

    </style>

    <style name="Theme.UnicodeTest01.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UnicodeTest01.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UnicodeTest01.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>